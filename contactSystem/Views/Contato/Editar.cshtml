@model ContatoModels
@{
    ViewData["Title"] = "Editar Contato";
}

<div class="text-center">
    <h1 class="display-4">EDITAR CONTATO</h1>
</div>

<form  asp-controller="Contato" asp-action="Alter" method="post">
    <input type="hidden" asp-for="Id">
    <div class="mb-3">
      <label for="name" class="form-label">NOME:</label>
      <input type="text" asp-for="Name" class="form-control" id="name" placeholder="Nome...">
    </div>
    <div class="mb-3">
      <label for="name" class="form-label">E-MAIL:</label>
      <input type="email" asp-for="Email" class="form-control" id="email" placeholder="Email...">
    </div>
    <div class="mb-3">
      <label for="name" class="form-label">TELEFONE:</label>
      <input type="number" asp-for="Number" class="form-control" id="cel" placeholder="Telefone...">
    </div>
    <button type="submit" class="btn btn-primary btn-block" style="margin-top:10px;">ALTERAR</button>
    <a class="btn btn-secondary btn-block" asp-controller="Contato" asp-action="Index" role="button">VOLTAR</a>
</form>