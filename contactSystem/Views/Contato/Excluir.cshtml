@model ContatoModels
@{
    ViewData["Title"] = "Excluir Contato";
}

<div class="text-center">
    <h1>Deseja apagar o contato @Model.Name ?</h1>
</div>
<div style="display:flex; align-items:center; justify-content:center; gap:10px;">
    <a class="btn btn-primary w-100" role="button" asp-controller="Contato" asp-action="Index">Cancelar</a>
    <a class="btn btn-danger w-100" role="button" asp-controller="Contato" asp-action="Delete" asp-route-id="@Model.Id">Confirmar</a>
</div>
